<?xml version="1.0" encoding="UTF-8"?>
<iconize:IconNavigationPage xmlns="http://xamarin.com/schemas/2014/forms" 
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                            x:Class="Tailenders.Controls.TransparentNavBar.CustomNavigationPage"
                            xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                            xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                            iOS:NavigationPage.IsNavigationBarTranslucent="True"
                            BarTextColor="White" >
    
    <NavigationPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <On Platform="Android, iOS" Value="Transparent" />
        </OnPlatform>
    </NavigationPage.BarBackgroundColor>
</iconize:IconNavigationPage>
